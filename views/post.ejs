                <article class="span6">
                    <form method="post" class="form-horizontal">
                        <fieldset>
                            <legend>发言</legend>
                            <div class="control-group">
                                <label class="label-control" for="title">标题：</label>
                                <div class="control">
                                    <input type="text" class="span12" name="title" />
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="label-control" for="post">正文：</label>
                                <div class="control">
                                    <textarea name="post" id="postessay" class="span12" rows="12"></textarea>
                                </div>
                            </div>
                            <input type="submit" class="btn btn-primary btn-block" value="发表" />
                        </fieldset>
                    </form>
                </article>
            </div>
<%- include footer %>